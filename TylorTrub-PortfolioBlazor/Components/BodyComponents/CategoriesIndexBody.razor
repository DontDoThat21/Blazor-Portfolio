@using TylorTrubPortfolioBlazor.DTO.Models

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary"> @* was: asp-controller="Category" asp-action="Create" *@
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    <MudSimpleTable class="table table-bordered table-striped">
        <tr>
            <th Style="padding: 2px">
                Category Name
            </th>
            <th Style="padding: 2px">
                Display Order
            </th>
            <th>
            </th>
        </tr>
        <tbody>
            @foreach (var category in categories.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2"> @* was: asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id" *@
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-danger mx-2"> @* was: asp-controller="Category" asp-action="Delete" asp-route-Id="@category.Id" *@
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </MudSimpleTable>
</div>

@code {
    [Parameter]
    public List<Category> categories { get; set; }
}