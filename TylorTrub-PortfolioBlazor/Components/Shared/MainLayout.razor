@inherits LayoutComponentBase

<PageTitle>Tylor Trub's Portfolio</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="bg-secondary">
    <MudAppBar Elevation="1" Class="bg-primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Tylor Trub's Portfolio</MudText>
        <MudSpacer />
        <MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" Style="padding-right: 28px;">
            <MudMenuItem>Login</MudMenuItem>
            <MudMenuItem>Register</MudMenuItem>
            <MudMenuItem>Log out</MudMenuItem>
        </MudMenu>
    </MudAppBar>
    <MudDrawer Class="btn-color ghost-white" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavLink Href=""  Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
        <MudNavGroup Title="Projects" Icon="@Icons.Material.Filled.Apps">
            <MudNavLink Href="/Projects/Index">All Projects</MudNavLink>
            <MudNavLink Href="/Projects/MauiTodos">.NET Maui Todo List</MudNavLink>
            <MudNavLink Href="/Projects/AngularEmployeeManager">Angular 16 Employee Manager</MudNavLink>
            <MudNavLink Href="/Projects/AngularAPI">.NET FW Angular API</MudNavLink>
            <MudNavLink Href="/Projects/HotSBot">HotS OCR Bot</MudNavLink>
            <MudNavLink Href="/Projects/PythonMaze">Python Maze</MudNavLink>
            <MudNavLink Href="/Projects/JavaSystemLocker">Java System Locker</MudNavLink>
            <MudNavLink Href="/Projects/WinFormsTodos">Win Forms Todos</MudNavLink>
            <MudNavLink Href="/Projects/ModernDesignPizzaStore">WPF Pizza Store</MudNavLink>
            <MudNavLink Href="/Projects/FlickrPhotoSearcher">Flickr Photo Searcher</MudNavLink>
            <MudNavLink Href="/Projects/FrameworkWebForms">Student Registration w/ Web Forms</MudNavLink>
            <MudNavLink Href="/Projects/CppCalculator">C++ WinForms Calculator</MudNavLink>
        </MudNavGroup>
        <MudNavGroup Title="Motorcycles" Icon="@Icons.Material.Filled.SportsMotorsports">
            <MudNavLink Href="/Motorcycles/Index" Icon="@Icons.Material.Filled.SportsMotorsports">Motorcycles overview</MudNavLink>
            <MudNavLink Href="/Motorcycles/Collection" Icon="@Icons.Material.Filled.LocalMovies">Motorcycle Footage</MudNavLink>
            <MudNavLink Href="/Motorcycles/Store" Icon="@Icons.Material.Filled.LocalConvenienceStore">Store</MudNavLink>
        </MudNavGroup>
        <MudNavGroup Title="Books" Icon="@Icons.Material.Filled.LibraryBooks">
            <MudNavLink Href="/Categories/Index" Icon="@Icons.Material.Filled.LocalConvenienceStore">Book Categories</MudNavLink>
            <MudNavLink Href="/Product/Index" Icon="@Icons.Material.Filled.LocalConvenienceStore">Products</MudNavLink>
            <MudNavLink Href="/Companies/Index" Icon="@Icons.Material.Filled.LocalConvenienceStore">Companies</MudNavLink>
        </MudNavGroup>
        <MudNavLink Href="Orders/Index" Icon="@Icons.Material.Filled.ShoppingCart">Manage Orders</MudNavLink>
        <MudNavLink Href="Carts/Index" Icon="@Icons.Material.Filled.ShoppingCart">Cart</MudNavLink>
        <MudNavGroup Title="Games" Icon="@Icons.Material.Filled.Games">
            <MudNavLink Href="Games/Index" Icon="@Icons.Material.Filled.Games">Games</MudNavLink>
            <MudNavLink Href="Games/Hangman" Icon="@Icons.Material.Filled.Games">Hangman</MudNavLink>
            <MudNavLink Href="Games/SimonSays" Icon="@Icons.Material.Filled.Games">Simon Says</MudNavLink>
        </MudNavGroup>
        <MudNavLink Href="Home/Privacy" Icon="@Icons.Material.Filled.PrivacyTip">Privacy</MudNavLink>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
 
@code 
{
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}